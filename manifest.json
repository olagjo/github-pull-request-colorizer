{
  "manifest_version": 2,

  "name": "GitHub Pull Request Colorizer",
  "description": "This extension colorized pull request listings.",
  "version": "1.3.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
